{% extends "_layouts/default.njk" %}

{% block body %}
  <div class="content">
    <strong>Howdy, {{user.name}}</strong>

    <p>Start a schedule by choosing one of our professionals:</p>
    <ul class="providers">
      {% for provider in providers %}
        <li class="provider">
          <div>
            <img src="/files/{{provider.avatar}}" />
            <strong>{{provider.name}}</strong>
          </div>

          <a href="/app/appointments/new/{{provider.id}}"><i class="far fa-calendar-alt"></i></a>
        </li>
      {% endfor %}
    </ul>

    <a href="/app/logout" class="logout">Logout</a>
  </div>
{% endblock %}
